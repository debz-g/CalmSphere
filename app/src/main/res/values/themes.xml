<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalmSphere" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/base_background</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CalmSphere" parent="Base.Theme.CalmSphere" />

    <style name="BaseBackground"><item name="android:background">@color/base_background</item> </style>
    <style name="BaseBackgroundHeader"><item name="android:backgroundTint">@color/base_background</item> </style>

    <style name="ArrowBack">
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="ArrowForward">
        <item name="android:src">@drawable/arrow_forward</item>
    </style>

    <style name="ButtonClose">
        <item name="android:src">@drawable/close</item>
    </style>

    <style name="ZenCardBackground">
        <item name="android:background">@color/zen_card_bg_color</item>
        <item name="strokeColor">@color/card_outline_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="RoundButtonShare" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/round_button_color</item>
        <item name="android:src">@drawable/share</item>
    </style>

    <style name="RoundButtonBookmark" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/round_button_color</item>
        <item name="android:src">@drawable/bookmark</item>

    </style>

    <style name="RoundButtonArticle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/round_button_color</item>
        <item name="android:src">@drawable/article</item>
    </style>

    <style name="HeaderText"><item name="android:textColor">@color/header_text_color</item></style>
    <style name="ShareToText"><item name="android:textColor">@color/black</item></style>
    <style name="CardTextHeader"><item name="android:textColor">@color/card_text_header_color</item></style>
    <style name="CardText"><item name="android:textColor">@color/card_text_color</item></style>

    <style name="ShareSheetBackground" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/share_sheet_bg_color</item>
    </style>

    <style name="ShareAppBackground">
        <item name="background">@color/share_apps_bg_color</item>
    </style>

    <style name="ShimmerCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/shimmer_color</item>
    </style>

    <style name="ShimmerBackground">
        <item name="background">@color/shimmer_color</item>
    </style>
</resources>